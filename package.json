{
	"name": "editor",
	"version": "0.0.0-dev",
	"publisher": "openstax",
	"description": "An editor for OpenStax-organized books.",
	"author": "phil@openstax.org",
	"repository": {
		"url": "https://github.com/openstax/pro-editing-tool/"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"main": "./client/dist/extension.js",
	"scripts": {
		"vscode:prepublish": "webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack": "webpack --mode development --config ./client/webpack.config.js && webpack --mode development --config ./server/webpack.config.js",
		"webpack-dev:client": "webpack --mode development --watch --config ./client/webpack.config.js",
		"webpack-dev:server": "webpack --mode development --watch --config ./server/webpack.config.js",
		"test-compile": "tsc -b",
		"package": "vsce package",
		"watch": "tsc -watch -b",
		"lint": "npm run lint:client && npm run lint:server",
		"lint:client": "eslint ./client/src --ext ts,js",
		"lint:server": "eslint ./server/src --ext ts,js",
		"test": "node ./client/out/test/runTest.js",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"activationEvents": [
		"onLanguage:xml",
		"onWebviewPanel:openstax.previewThing",
		"onWebviewPanel:openstax.dashboardThing",
		"onWebviewPanel:openstax.imageUpload",
		"onCommand:openstax:showPreviewToSide"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "CNXML extension configuration",
			"properties": {
				"languageServerCnxml.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "openstax.showPreviewToSide",
				"title": "Show Preview/Visual Editor",
				"category": "Openstax"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "openstax",
					"title": "Openstax",
					"icon": "openstax-logo.svg"
				}
			]
		},
		"views": {
			"openstax": [
				{
					"id": "test1",
					"name": "Test1"
				},
				{
					"id": "test2",
					"name": "Test2"
				}
			]
		},
		"menus": {
			"editor/title": [
				{
					"command": "openstax.showPreviewToSide",
					"when": "editorLangId == xml && !notebookEditorFocused",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "openstax.showPreviewToSide",
					"when": "editorLangId == xml",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "openstax.showPreviewToSide",
					"when": "editorLangId == xml",
					"group": "1_open"
				}
			],
			"commandPalette": [
				{
					"command": "openstax.showPreviewToSide",
					"when": "editorLangId == xml && !notebookEditorFocused",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "markdown.showPreviewToSide",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == xml && !notebookEditorFocused"
			}
		]
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.2",
		"vsce": "^1.83.0",
		"webpack": "^5.18.0",
		"webpack-cli": "^4.4.0"
	}
}
